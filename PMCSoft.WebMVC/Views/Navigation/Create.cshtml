@model PMCSoft.Core.Models.Navigation.NavModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--BEGIN TITLE & BREADCRUMB PAGE-->




<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
    <div class="row">
        <div class="col-lg-6">
            <div class="page-header pull-left">
                <div class="page-title">Create Navigation</div>
            </div>
        </div>
        <div class="col-lg-6 text-right pts">

            @Html.ActionLink("Navigation List", "Index")
          
        </div>
    </div>

    <div class="clearfix"></div>
</div>
<!--END TITLE & BREADCRUMB PAGE--><!--BEGIN CONTENT-->
<div class="page-content">

    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("Create", "Navigation", FormMethod.Post, new { id = "menufrm", role = "form", @class = "", novalidate = "novalidate", enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(m => m.MenuId, new { @class = "ignore" })

                <div class="row">

                    <div class="col-lg-3">
                        <div class="mb-3">
                            @Html.LabelFor(model => model.MenuName, new { @class = "control-label", @for = "inputName" })
                            <div class="Supplier">
                                @Html.TextBoxFor(model => model.MenuName, new { @class = "form-control Name", maxlength = "50", @placeholder = "Please Enter " + Html.DisplayNameFor(n => n.MenuName) })

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="mb-3">
                            @Html.LabelFor(model => model.ParentId, new { @class = "control-label", @for = "inputName" })
                            <div class="Parent">
                                @Html.DropDownListFor(m => m.ParentId, new SelectList(Model.MenuList, "ItemId", "ItemName"), "- Please select a Parent Menu -", new { @class = "form-control", tabindex = 2 })

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="mb-3">
                            @Html.LabelFor(model => model.MenuIcon, new { @class = "control-label", @for = "inputName" })
                            <div class="input-icon right">
                                @Html.TextBoxFor(model => model.MenuIcon, new { @class = "form-control", maxlength = "50", @placeholder = "Please Enter " + Html.DisplayNameFor(n => n.MenuIcon) })
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-2">
                        <div class="mb-3">
                            @Html.LabelFor(model => model.OrderNo, new { @class = "control-label", @for = "inputName" })
                            <div class="input-icon right">
                                @Html.TextBoxFor(model => model.OrderNo, new { @class = "form-control", maxlength = "50", @placeholder = "Please Enter " + Html.DisplayNameFor(n => n.OrderNo) })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="mb-3">
                            <label for="minimal-checkbox-1">Menu Type</label>
                            <div class="checkbox mtm">
                                @Html.CheckBoxFor(m => m.IsAction)
                                &nbsp;&nbsp;<label for="minimal-checkbox-1">IS Accessible</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.Description, new { @class = "control-label", @for = "inputName" })
                                <div class="input-icon right">
                                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 mt-4 pt-3">
                            <button type="submit" class="btn btn-outline-primary btn-square">Save</button>
                        </div>
                    </div>
                </div>


            }

        </div>






    </div>

</div>


@section styles {


}
@section scripts {

    @Scripts.Render("~/Scripts/validate")
    @Scripts.Render("~/JavaScript/RightsMaster.js")

}
