@using IExpro.Core.Models;
@model IEnumerable<MenuModel>

@foreach (var menuitem in Model)
{
    <li>



        @if (menuitem.MenuList.Count() > 0)
        {
            <a href="@menuitem.MenuUrl">
                <i class="fa fa-sitemap fa-fw">
                    <div class="icon-bg bg-dark"></div>
                </i><span class="menu-title">
                    @menuitem.MenuName
                </span>
                <span class="fa arrow"></span>
            </a>
            <ul class="nav nav-second-level">
                @foreach (var sitem in menuitem.MenuList)
                {
                    <li>


                        @if (sitem.MenuList.Count() > 0)
                        {<a class='second-level-heading' href="@sitem.MenuUrl">
                                <span class='submenu-title'>@sitem.MenuName</span>
                                <span class='fa arrow  text-white'></span>
                            </a>
                            Html.RenderPartial("_subMenuItems", menuitem.MenuList);
                        }
                        else
                        {
                            <a class='second-level-heading' href="@sitem.MenuUrl">
                                <span class='submenu-title'>@sitem.MenuName</span>
                         
                            </a>
                        }
                    </li>
                }
            </ul>
        }
        else
        {
            <a href="@menuitem.MenuUrl">
                <i class="fa fa-sitemap fa-fw">
                    <div class="icon-bg bg-dark"></div>
                </i><span class="menu-title">
                    @menuitem.MenuName
                </span>

            </a>
        }
    </li>
}